%appinstall soilmask
    apt-get update -y
    apt-get install --no-install-recommends -y libsm6 \
       libxext6 \
       libxrender1 \
       libglib2.0-0
    ~/miniconda3/bin/conda create --prefix "${PWD}" --yes --file src/package-list.txt

%appenv soilmask
    PATH=~/miniconda3/bin:$PATH
%apprun soilmask
    exec entrypoint.py
%apphelp soilmask
    This app provides an entrypoint to the soilmask tool
    docker run agdrone/transformer-soilmask:3.0 run soilmask